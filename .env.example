# API settings
API_V1_STR=/api/v1
PROJECT_NAME=Freeflix API
ENVIRONMENT=development

# YTS scraping settings
YIFY_URL=https://en.yts-official.mx
YIFY_URL_BROWSE_URL=https://en.yts-official.mx/browse-movies
RARBG_URL=https://en.rarbg-official.com/{path}
REQUEST_RATE_LIMIT=3

# External API keys
OMDB_API_KEY=your_omdb_api_key_here
TMDB_API_KEY=your_tmdb_api_key_here

# Torrent settings
DEFAULT_DOWNLOAD_PATH=./downloads
LISTEN_INTERFACES=0.0.0.0:6881
PORT_RANGE_START=6881
PORT_RANGE_END=6891
MAX_ACTIVE_DOWNLOADS=3

# Logging settings
LOG_LEVEL=INFO

# Database settings
# SQLite (default)
DB_PATH=./freeflix.db

# PostgreSQL (uncomment and fill these to use PostgreSQL instead of SQLite)
#POSTGRES_USER=postgres
#POSTGRES_PASSWORD=your_password
#POSTGRES_HOST=localhost
#POSTGRES_PORT=5432
#POSTGRES_DB=freeflix
#POSTGRES_DSN=postgresql://postgres:your_password@localhost:5432/freeflix

# Monitoring
#SENTRY_DSN=https://your_sentry_dsn

# Cron settings
CRON_ENABLED=true
CACHE_MOVIES_FOR=365